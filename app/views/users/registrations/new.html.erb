<div class="row">
  <div class="col-sm-12">
    <h1>Sign up</h1>

<!--     <% resource.build_condo if resource.condo.nil? %>
 --><!--     <% resource.build_condo %>
 -->    <%= form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :role => "form" }) do |f| %>

    <%= devise_error_messages! %>

<div class="col-md-6 column" style="display:inline-block;">
    <div class="form-group">
      <%= f.label :email %>
      <div class="row">
        <div class="col-md-6 column">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :phone, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
    </div>

</div>


<div class="col-md-6 column" style="display:inline-block;">

    <%= f.fields_for :condo do |condo_form| %>
    <div class="form-group">
      <%= condo_form.label :address %>
      <div class="row">
        <div class="col-sm-6">
      <p><%= condo_form.text_field :address, class: "form-control"  %></p>
        </div>
        </div>
    </div>
    <% end %>

    <div class="form-group">
      <%= f.label :postal_code %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :suite %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :suite, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :parking_spot %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :parking_spot, class: "form-control" %>
        </div>
      </div>
    </div>

</div>


    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>


    <%= render "devise/shared/links" %>

  </div>
</div>

